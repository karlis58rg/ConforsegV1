<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/principalLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.10"
            android:gravity="center"
            android:background="@drawable/boton_rows">
            <TextView
                android:id="@+id/lblFolioIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21000001"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.10"
            android:gravity="center"
            android:background="@drawable/boton_rows">
            <TextView
                android:id="@+id/lblFechaIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021-07-10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.10"
            android:gravity="center"
            android:background="@drawable/boton_rows">
            <TextView
                android:id="@+id/lblUserIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRUEBA"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.10"
            android:background="@drawable/boton_rows">
            <TextView
                android:id="@+id/lblNotaIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Hola"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>